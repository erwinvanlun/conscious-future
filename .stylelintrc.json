{
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-standard-scss"],
      "rules": {
        "indentation": 2,
        "color-named": "never",
        "max-empty-lines": 1,
        "color-no-hex": true,
        "function-disallowed-list": ["darken", "lighten", "rgba", "rgb"],
        "declaration-no-important": true
      }
    }
  ],
  "rules": {}
}
